local constSettings = {}

constSettings.Prices = {
	Furniture = {
	  Table = 21,
    Chair = 11
	},
	Tech = {
    PCs = {
      PC1 = 45,
      PC2 = 128,
      PC3 = 346
    }
	  Monitors = {
      Mon1 = 24,
      Mon2 = 87
    }
	},
	Houses = {
    ModernHouse = 126324,
    WoodenLodge = 12853,
    Mansion = 643245
	}
}

constSettings.UILocations = function()
	local player = game.Players.LocalPlayer
	local UserInterface = player.PlayerGui:WaitForChild("UserInterface")
	local monitorSurfaceGuis = player.PlayerGui:WaitForChild("SurfaceGuis")
	local CookingUI = UserInterface:WaitForChild("Cook")
	local VideoUI = UserInterface:WaitForChild("Vid")
	local ShopUI = UserInterface:WaitForChild("Shop")

	local UILocations = {
		User_Interface = UserInterface,
		MonitorSurfaceGuis = monitorSurfaceGuis,
		Cooking_UI = CookingUI,
		Video_UI = VideoUI,
		Shop_UI = ShopUI,
		Notification_UI = NotificationUI,
		Misc_UI = MiscUI,
		Screen_UI = ScreenUI,
		
		BeginCookingButton = CookingUI:FindFirstChild("BeginCook"),
		UploadCookingVideoButton = CookingUI:FindFirstChild("Upload"),
		ChoppingBarBack = CookingUI:FindFirstChild("ChopBarBack"),
		CookingOptionsBack = CookingUI:FindFirstChild("CookOptionsBack"),
		CurrentCookingProgress = CookingUI:FindFirstChild("Progress"),
		NameCookingVidBack = CookingUI:FindFirstChild("NameVidBack"),
		
		AlphaFrame = VideoUI:FindFirstChild("AlphaFrame"),
		LiveVideoFrame = VideoUI:FindFirstChild("LiveVid"),
		MilestoneFrame = VideoUI:FindFirstChild("Milestones"),
		VideoStatsFrame = VideoUI:FindFirstChild("VidStats"),
		StatsUI = VideoUI:FindFirstChild("MainStats"),
		
		BuyCarUI = ShopUI:FindFirstChild("BuyCar"),
		FurnitureStore = ShopUI:FindFirstChild("Furniture_Store"),
		GamepassStore = ShopUI:FindFirstChild("Gamepass_Store"),
		HousingStore = ShopUI:FindFirstChild("House_Store"),
		CashStore = ShopUI:FindFirstChild("Cash_Store"),
		TBStore = ShopUI:FindFirstChild("TB_Store"),
		TechStore = ShopUI:FindFirstChild("Tech_Store")
	}
	
	return UILocations
end 

constSettings.ValueLocations = function(plrName, check)
  local repstorage = game:GetService("ReplicatedStorage")
  
  local repValues = repstorage:WaitForChild("Players")
  local plrRepValues = repValues:WaitForChild(plrName)
  local repStatsFolder = plrRepValues:WaitForChild("Stats")
  local repEditModeFolder = plrRepValues:WaitForChild("EditMode_Vals")
  local repMiscFolder = plrRepValues:WaitForChild("Misc_Vals")
  local repVidValuesFolder = plrRepValues:WaitForChild("Vid_Vals")
  local repInventoryFolder = plrRepValues:WaitForChild("Inv")
  
	if check == "Server" then
		local serverstorage = game:GetService("ServerStorage")
	
		local servervalues = serverstorage:WaitForChild("Values")
		local plrServerValues = servervalues:WaitForChild(plrName .. "_Vals")
		local serverStatsFolder = plrServerValues:WaitForChild("Stats")
		local serverLevelsFolder = plrServerValues:WaitForChild("Levels")
		local serverMoodFolder = plrServerValues:WaitForChild("Mood_Vals")
		local serverInventoryFolder = plrServerValues:WaitForChild("Inv")
		local serverVideosFolder = plrServerValues:WaitForChild("Vids")
		local serverHouseFolder = plrServerValues:WaitForChild("House")
		local serverVideoValuesFolder = plrServerValues:WaitForChild("Vid_Vals")
		local serverGamepassValuesFolder = plrServerValues:WaitForChild("Gamepass_Vals")
		local serverMiscValuesFolder = plrServerValues:WaitForChild("Misc_Vals")
	
		local valueLocations = {
			ServerLocations = {
				Values = servervalues,
				PlrValues = plrServerValues,
				StatsFolder = serverStatsFolder,
				LevelsFolder = serverLevelsFolder,
				MoodFolder = serverMoodFolder,
				InventoryFolder = serverInventoryFolder,
				VideosFolder = serverVideosFolder,
				HouseFolder = serverHouseFolder,
				VideoValuesFolder = serverVideoValuesFolder,
				GamepassValuesFolder = serverGamepassValuesFolder,
				MiscValuesFolder = serverMiscValuesFolder,
				
				InventoryPCsFolder = serverInventoryFolder:FindFirstChild("PCs"),
				InventoryMonitorsFolder = serverInventoryFolder:FindFirstChild("Monitors"),
				InventoryRecordingFolder = serverInventoryFolder:FindFirstChild("Recording"),
				InventoryFurnitureFolder = serverInventoryFolder:FindFirstChild("Furniture"),
				InventoryGamesFolder = serverInventoryFolder:FindFirstChild("Games"),
				HouseFurnitureFolder = serverHouseFolder:FindFirstChild("House_Furniture")
				
				Subs = serverStatsFolder:FindFirstChild("Subs"),
				Views = serverStatsFolder:FindFirstChild("Views"),
				Cash = serverStatsFolder:FindFirstChild("Cash"),
				Bux = serverStatsFolder:FindFirstChild("Bux"),
			},
			RepLocations = {
				Values = repValues,
				PlrValues = plrRepValues,
				StatsFolder = repStatsFolder,
				EditModeFolder = repEditModeFolder,
				MiscFolder = repMiscFolder,
				VidValuesFolder = repVidValuesFolder,
				InventoryFolder = repInventoryFolder,
				
				InventoryPCsFolder = repInventoryFolder:FindFirstChild("PCs"),
				InventoryMonitorsFolder = repInventoryFolder:FindFirstChild("Monitors"),
				InventoryRecordingFolder = repInventoryFolder:FindFirstChild("Recording"),
				InventoryFurnitureFolder = repInventoryFolder:FindFirstChild("Furniture"),
				
				Subs = repStatsFolder:FindFirstChild("Subs"),
				Views = repStatsFolder:FindFirstChild("Views"),
				Cash = repStatsFolder:FindFirstChild("Cash"),
				Bux = repStatsFolder:FindFirstChild("Bux")
			}
		}
		return valueLocations
	elseif check == "Client" then
		local RepLocations = {
			Values = repValues,
			PlrValues = plrRepValues,
			StatsFolder = repStatsFolder,
			EditModeFolder = repEditModeFolder,
			MiscFolder = repMiscFolder,
			VidValuesFolder = repVidValuesFolder,
			InventoryFolder = repInventoryFolder,
			
			InventoryPCsFolder = repInventoryFolder:FindFirstChild("PCs"),
			InventoryMonitorsFolder = repInventoryFolder:FindFirstChild("Monitors"),
			InventoryRecordingFolder = repInventoryFolder:FindFirstChild("Recording"),
			InventoryFurnitureFolder = repInventoryFolder:FindFirstChild("Furniture"),
			
			Subs = repStatsFolder:FindFirstChild("Subs"),
			Views = repStatsFolder:FindFirstChild("Views"),
			Cash = repStatsFolder:FindFirstChild("Cash"),
			Bux = repStatsFolder:FindFirstChild("Bux")
		}
		return RepLocations
	end
end

return constSettings

--This module can be used in all other scripts, and makes changing/moving values around much easier as you just have to change it's location in this script and it will change it for all
--The ValueLocations part can be called from the server or client, and it will return the relevant values in each case


